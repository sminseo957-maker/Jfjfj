        // Chart.js 데이터
        const ctx = document.getElementById('pollutionChart').getContext('2d');
        const pollutionChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['PE', 'PP', 'PS', 'PET', 'PVC'],
                datasets: [{
                    label: '지역별 평균 오염 수준 (mg/L)',
                    data: [12, 19, 3, 5, 2], // 예시 데이터
                    backgroundColor: [
                        '#0099ff',
                        '#00cc99',
                        '#ff9900',
                        '#ff6666',
                        '#9966ff'
                    ],
                    borderColor: [
                        '#007acc',
                        '#009966',
                        '#cc6600',
                        '#cc3333',
                        '#6600cc'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    title: {
                        display: true,
                        text: '주요 플라스틱 종류별 오염 수준'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
